@model IEnumerable<TodoItemDDD.MVC.ViewModels.CategoriaViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Categorias</h2>

<p>
    @Html.ActionLink("Adicionar Categoria", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeCategoria)
        </th>
        
        <th>
            Categoria Pai
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomeCategoria)
        </td>
        <td>
           
            @Html.DisplayFor(modelItem => item.CategoriaPai.NomeCategoria)

        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CategoriaId }) |
           
            @Html.ActionLink("Excluir", "Delete", new { id=item.CategoriaId })
        </td>
    </tr>
}

</table>
